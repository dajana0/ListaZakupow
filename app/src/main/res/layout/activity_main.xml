<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dajana.listazakupow.MainActivity"
    android:background="@color/background">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle"
        android:drawableTop="@android:drawable/ic_menu_sort_by_size"
        android:text="Lista"
        android:textColor="#fff"
        android:id="@+id/button2"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickLista"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle"
        android:drawableTop="@android:drawable/ic_menu_help"
        android:paddingTop="20dp"
        android:text="@string/title_activity_settings"
        android:textColor="#fff"
        android:id="@+id/button"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="50dp"
        android:onClick="onClickOpcje"/>

</RelativeLayout>
